{
	"name": "openburn",
	"license": "MPL-2.0",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync && npm run build:theme-light && npm run build:theme-dark || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"build:theme-light": "smui-theme compile static/smui.css -i src/theme",
		"build:theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark",
		"deploy": "npm run build && gcloud app deploy --project openburn-471023 --version staging --no-promote build/app.yaml"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@material/typography": "^14.0.0",
		"@mdi/js": "^7.4.47",
		"@smui/button": "^8.0.3",
		"@smui/chips": "^8.0.3",
		"@smui/data-table": "^8.0.3",
		"@smui/dialog": "^8.0.3",
		"@smui/form-field": "^8.0.3",
		"@smui/icon-button": "^8.0.3",
		"@smui/list": "^8.0.3",
		"@smui/paper": "^8.0.3",
		"@smui/textfield": "^8.0.3",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^24.3.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"smui-theme": "^8.0.3",
		"svelte": "^5.0.0",
		"svelte-adapter-appengine": "^1.2.0",
		"svelte-check": "^4.0.0",
		"svelte-i18n": "^4.0.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"uuid": "^12.0.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0"
	}
}
